#!/bin/bash
RUNNING="./monitor.lock"

touch "$RUNNING"

if [ ! -d dist/index.html ]; then
  cp src/index.html dist/index.html
fi

old=$(./hash src/index.html)
while [ -f "$RUNNING" ]; do
  new=$(./hash src/index.html)
  if [ "$old" != "$new" ]; then
    cp src/index.html dist/index.html
    old="$new"
    echo "updated index.html"
  else
    sleep 4
  fi
done

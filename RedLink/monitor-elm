#!/bin/bash
RUNNING="./monitor.lock"

touch "$RUNNING"

MOD="$1"
FILE="src/$1.elm"
DEP="src/$2"

./format-build "$MOD"
old=$(./hash "$FILE")
while [ -f "$RUNNING" ]; do
  new=$(./hash "$FILE")
  if [ "$old" != "$new" ]; then
    ./format-build "$MOD"
    old="$new"
    echo "updated $MOD:" `date`
    if [ "$MOD" != "Main" ]; then
      ./build Main
    fi
  else
    sleep 4
  fi
done
echo "stopped monitor on $MOD."
